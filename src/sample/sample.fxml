                  </TextArea>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="500.0" prefWidth="350.0">
               <children>
                  <TextField maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" text="The AI">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <ImageView fx:id="AIImageView" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
