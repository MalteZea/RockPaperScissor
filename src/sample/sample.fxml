      <HBox prefHeight="645.0" prefWidth="945.0">
         <children>
            <VBox alignment="CENTER" prefHeight="500.0" prefWidth="280.0">
               <children>
                  <Button fx:id="RockButton" mnemonicParsing="false" onAction="#chooseRock" prefHeight="50.0" prefWidth="100.0" text="Rock">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="PaperButton" mnemonicParsing="false" onAction="#choosePaper" prefHeight="50.0" prefWidth="100.0" text="Paper">
